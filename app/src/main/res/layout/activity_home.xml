<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5">

    <View
        android:id="@+id/header_background"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:background="#3B82F6"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/text_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="EthicalScanner"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@id/header_background"
        app:layout_constraintTop_toTopOf="@id/header_background"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <EditText
        android:id="@+id/et_search_input"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/bg_rounded_white"
        android:elevation="6dp"
        android:hint="Search product or enter UPC"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:inputType="text"
        app:layout_constraintEnd_toStartOf="@+id/btn_search_action"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/header_background" />

    <ImageButton
        android:id="@+id/btn_search_action"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/bg_rounded_blue"
        android:elevation="6dp"
        android:src="@android:drawable/ic_menu_search"
        app:tint="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="@+id/et_search_input"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/et_search_input" />

    <!-- Scan Button with Shadow -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_scan_camera"
        android:layout_width="0dp"
        android:layout_height="141dp"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="24dp"
        android:backgroundTint="#EF4444"
        android:paddingStart="24dp"
        android:paddingEnd="24dp"
        android:text="Scan Barcode via Camera"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:textStyle="bold"
        app:elevation="8dp"
        app:cornerRadius="12dp"
        app:icon="@android:drawable/ic_menu_camera"
        app:iconGravity="textStart"
        app:iconPadding="16dp"
        app:iconSize="48dp"
        app:iconTint="#FFFFFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_search_input" />

    <View
        android:id="@+id/divider"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginTop="32dp"
        android:layout_marginHorizontal="32dp"
        android:background="#D1D5DB"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_scan_camera" />

    <TextView
        android:id="@+id/lbl_categories"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:layout_marginStart="16dp"
        android:text="Browse Categories"
        android:textColor="#1F2937"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/divider" />

    <!-- Category Buttons with Material elevation -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_category_1"
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        android:backgroundTint="#FFFFFF"
        android:text="Food &amp;\nBeverage"
        android:textColor="#3B82F6"
        app:elevation="4dp"
        app:cornerRadius="12dp"
        app:layout_constraintHorizontal_chainStyle="spread"
        app:layout_constraintStart_toStartOf="@+id/lbl_categories"
        app:layout_constraintEnd_toStartOf="@+id/btn_category_2"
        app:layout_constraintTop_toBottomOf="@+id/lbl_categories" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_category_2"
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="16dp"
        android:backgroundTint="#FFFFFF"
        android:text="Health &amp;\nWellness"
        android:textColor="#10B981"
        app:elevation="4dp"
        app:cornerRadius="12dp"
        app:layout_constraintStart_toEndOf="@+id/btn_category_1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/btn_category_1" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_category_3"
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:layout_marginTop="16dp"
        android:backgroundTint="#FFFFFF"
        android:text="Home &amp;\nLiving"
        android:textColor="#F59E0B"
        app:elevation="4dp"
        app:cornerRadius="12dp"
        app:layout_constraintStart_toStartOf="@+id/btn_category_1"
        app:layout_constraintEnd_toEndOf="@+id/btn_category_1"
        app:layout_constraintTop_toBottomOf="@+id/btn_category_1" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_category_4"
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:layout_marginTop="16dp"
        android:backgroundTint="#FFFFFF"
        android:text="Beauty &amp;\nCare"
        android:textColor="#8B5CF6"
        app:elevation="4dp"
        app:cornerRadius="12dp"
        app:layout_constraintStart_toStartOf="@+id/btn_category_2"
        app:layout_constraintEnd_toEndOf="@+id/btn_category_2"
        app:layout_constraintTop_toBottomOf="@+id/btn_category_2" />

    <!-- FLOATING BOTTOM NAVIGATION BAR -->
    <androidx.cardview.widget.CardView
        android:id="@+id/floatingNavContainer"
        android:layout_width="0dp"
        android:layout_height="70dp"
        android:layout_marginHorizontal="20dp"
        android:layout_marginBottom="20dp"
        app:cardCornerRadius="35dp"
        app:cardElevation="12dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:id="@+id/bottomNav"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            app:itemIconTint="#9CA3AF"
            app:itemRippleColor="#3B82F6"
            app:itemTextColor="#9CA3AF"
            app:labelVisibilityMode="labeled"
            app:menu="@menu/bottom_nav_menu" />

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>